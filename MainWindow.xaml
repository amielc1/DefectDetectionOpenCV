<Window x:Class="DefectDetectionDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:vm="clr-namespace:DefectDetectionDemo.ViewModels"
        Title="Amiel's Defect Detection Lab" Height="850" Width="1300"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Defect Detection" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,30"/>

                <!-- Actions -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="ACTIONS" Foreground="{StaticResource SubTextBrush}" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <Button Content="Load Image" Command="{Binding LoadImageCommand}"/>
                    <Button Content="Add Cursor Range" Command="{Binding AddCursorCommand}"/>
                    <Button Content="Show Colored Domains" Command="{Binding ApplyColorsCommand}"/>

                    <Separator Background="{StaticResource BorderBrush}" Margin="0,20"/>

                    <Button Content="Detect Defects" Command="{Binding DetectCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>

                <!-- Info / Status (Placeholder) -->
                <StackPanel Grid.Row="3">
                    <TextBlock Text="Ready" Foreground="{StaticResource SubTextBrush}" HorizontalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- Image View -->
            <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Background="Black" ClipToBounds="True">
                 <Grid>
                    <TextBlock Text="No Image Loaded"
                               Foreground="#555"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <Image Source="{Binding CurrentImageDisplay}" Stretch="Uniform"/>
                 </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Transparent" Margin="0,5"/>

            <!-- Analysis Tools -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <!-- Histogram -->
                <GroupBox Header="Intensity Histogram">
                    <oxy:PlotView Model="{Binding DefectModel.Histogram}" Background="Transparent"/>
                </GroupBox>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" Background="Transparent"/>

                <!-- Ranges / DataGrid -->
                <GroupBox Grid.Column="2" Header="Ranges Configuration">
                    <DataGrid ItemsSource="{Binding DefectModel.HistogramDomainsList}"
                              SelectedItem="{Binding SelectedDomain}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="40" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Start" Binding="{Binding Start, StringFormat=N1}" Width="*"/>
                            <DataGridTextColumn Header="End" Binding="{Binding End, StringFormat=N1}" Width="*"/>
                            <DataGridTextColumn Header="Color ID" Binding="{Binding Color}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>